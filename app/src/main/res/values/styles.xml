<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/dark_main_brand_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">#000</item>
        <item name="android:textColorHint">@color/gray_helper</item>
        <item name="colorControlActivated">@color/main_brand_color</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>



    <style name="BlueVezeetaHintMainEditText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/main_brand_color</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="MyTextInputLayoutHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray_default</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlActivated">@color/main_brand_color</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="error_appearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>


    <style name="AppTheme.VezeetaEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">#fff</item>
        <item name="android:textColorHint">#fff</item>
        <item name="colorControlNormal">#fff</item>
    </style>

    <style name="MyAlertDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/main_brand_color</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">#FFFFFF</item>

        <item name="android:editTextStyle">@style/AppTheme.VezeetaEditText</item>
    </style>

    <style name="PatientsTabLayoutTheme" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/main_brand_color</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabTextAppearance">@style/MyCustomsubTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/main_brand_color</item>
    </style>

    <style name="MyCustomsubTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SurveyPopupTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="button_font">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_body</item>
    </style>




    <style name="TimePickerDialog" />

    <style name="not_selected_map_marker_text">
        <item name="android:textColor">@color/gray_default</item>
        <item name="android:textSize">@dimen/text_caption</item>
    </style>

    <style name="selected_map_marker_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">@dimen/text_caption</item>
    </style>


    <style name="ThemeOverlay.Vezeeta.Button.Blue.Bridge" parent="">
        <item name="colorAccent">@color/main_brand_color</item>
        <item name="colorPrimary">@color/main_brand_color</item>
    </style>

    <style name="ThemeOverlay.Vezeeta.Button.White.Bridge" parent="">
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/main_brand_color</item>
    </style>

    <style name="Widget.Vezeeta.Button.Contained.Bridge" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">256dp</item>
        <item name="android:theme">@style/ThemeOverlay.Vezeeta.Button.Blue.Bridge</item>
    </style>

    <style name="Widget.Vezeeta.Button.Outlined.Bridge" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minWidth">256dp</item>
        <item name="android:textColor">@color/main_brand_color</item>
        <item name="android:theme">@style/ThemeOverlay.Vezeeta.Button.White.Bridge</item>
        <item name="strokeColor">@color/main_brand_color</item>
    </style>

    <style name="Widget.Vezeeta.Button.TextButton.Bridge" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">256dp</item>
        <item name="android:textColor">@color/main_brand_color</item>
        <item name="android:theme">@style/ThemeOverlay.Vezeeta.Button.White.Bridge</item>
        <item name="strokeColor">@color/main_brand_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="btn_secondary_white">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="txt_title_bold_medium">
        <item name="android:textColor">@color/text_dark_gray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="txt_sub_title">
        <item name="android:textColor">@color/text_dark_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>




    <style name="DialogFragment" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DatePickerTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MySpinnerDatePicker</item>
        <item name="colorPrimary">@color/main_brand_color</item>
        <item name="colorPrimaryDark">@color/dark_main_brand_color</item>
        <item name="colorAccent">@color/main_brand_color</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
            <item name="colorControlNormal">@color/main_brand_color</item>
    </style>

    <style name="DatePickerButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/main_brand_color</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="MySpinnerDatePicker" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="colorControlNormal">@color/main_brand_color</item>
        <item name="colorPrimary">@color/main_brand_color</item>
        <item name="colorPrimaryDark">@color/dark_main_brand_color</item>
        <item name="colorAccent">@color/main_brand_color</item>
        <item name="android:divider">@color/main_brand_color</item>
    </style>

    <style name="Widget.PatientPharmacy.TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/hint_text_color</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:colorPrimary">@color/hint_text_color</item>
    </style>



    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CheckBox</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSecondary">@color/white</item>
    </style>



</resources>
