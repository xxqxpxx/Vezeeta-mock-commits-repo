<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemContainer"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/main_brand_color"
    android:padding="5dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/padding8"
        android:layout_marginStart="@dimen/general_15_margin"
        android:layout_marginEnd="@dimen/general_15_margin"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/general_5_margin"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/itemCityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/general_5_margin"
                android:layout_marginStart="@dimen/general_10_margin"
                android:textColor="@color/black"
                android:text="city"/>

            <TextView
                android:id="@+id/itemCitySubtite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="country"
                android:layout_margin="5dp"
                android:textSize="15sp"
                 android:textStyle="bold"
                android:textColor="@color/black"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>